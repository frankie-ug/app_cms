<% @page_title = "Quiz Menu" %>

<div class="menu">
  <h2>Welcome to Quiz</h2>

  <p><b></b></p>
  <p align="center">Please select a quiz to continue! or Create a quiz if you would like to</p>
  

  <table class="listing" summary="Quiz list" align='center'>
    <tr class="header">
      <th>Quiz id</th>
      <th>Quiz Name</th>
      <th>About Quiz</th>
      <th>Quiz Created by</th>
      <th>Click to Take quiz</th>
    </tr>
    <% @quizzes.each do |quiz| %>
    <tr>
      <td><%= quiz.id %></td>
      <td><%= quiz.name %></td>
      <td><%= quiz.about %></td>
      <td><%= User.find(quiz.userid.to_i).name %></td>
      
     <td class="actions">
        <%= link_to("Take Quiz", { :controller => 'quiz', :action => 'show', :id =>quiz.id}, :class => 'action show') %>
      </td>
    </tr>
    <% end %>
  </table>
  
    <%= link_to("Click to Create quiz", {:action => 'new'}, :class => 'action show') %>
</div>
