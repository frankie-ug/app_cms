<% @page_title = "Quiz Menu" %>

<div class="menu">
  <h2>Welcome to Quiz</h2>

  <p><b></b></p>
  <p align="center">Please select a quiz to continue! or Create a quiz if you would like to</p>

  <table class="listing" summary="Quiz list">
    <tr class="header">
      <th>id</th>
      <th>Name</th>
      <th>About</th>
      <th>Created by</th>
      <th>Actions</th>
    </tr>
    <% @quizzes.each do |quiz| %>
    <tr>
      <td><%= quiz.id %></td>
      <td><%= quiz.name %></td>
      <td><%= quiz.about %></td>
      <td><%= quiz.userid %></td>
      
     <td class="actions">
        <%= link_to("Take Quiz", {:action => 'show', :id =>quiz.id}, :class => 'action show') %>
      </td>
    </tr>
    <% end %>
  </table>
  
    <%= link_to("Click to Create quiz", {:action => 'show'}, :class => 'action show') %>
</div>
