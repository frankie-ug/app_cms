<!DOCTYPE html>
<html>
  <head>
    <title>QuizMe | <%= @page_title || "1" %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
  </head>
  <body>
    <div id="header">
      <h1>QuizMe</h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div id="content">
        <div id="user_logged">
          <% if !session[:username].blank? %>
            <div class="user_logged">
              <b>Logged as ::: <%= session[:username] %> <%= link_to("Logout", :controller => 'welcome', :action => 'logout') %></b>
            </div>
            <% else %>
              <b> Welcome Guest ::: <%= link_to("Login", :controller => 'welcome', :action => 'login') %> </b>
          <% end %>
        </div>

        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; QuizMe.com</p>
    </div>
  </body>
</html>
