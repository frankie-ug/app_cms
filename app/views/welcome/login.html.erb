<% @page_title = "User Login" %>

<div class="login" align="center">
  <%= form_tag(:action => 'attempt_login') do %>
  <table>
    <div class="form-group">
      <tr>
        <td>Username:</td>
        <td><%= text_field_tag(:username,  nil, :placeholder => "username", :class => "form-control") %></td>
      </tr>
    </div>
    <tr>
      <td>Password:</td>
      <td><%= password_field_tag(:password, nil, :placeholder => "password", :class => "form-control") %></td>
    </tr>
    
    <tr>
        <div class="form-groups">
          <td>
            <%= link_to("Sign Up", :action => "sign_up") %>
          </td>
          <td colspan="2">
          <%= button_tag(type: 'submit', class: "btn btn-success btn-block btn-") do %>
           <i class="icon-ok icon-white"></i> login
          <% end %>
          </td>
        </div>
        </tr>
        
  </table>
  <% end %>
</div>

