<% @page_title = "Users" %>
<div class="users index">
  <h2>Users</h2>

  <%= link_to("Add New User", {:action => 'new'}, :class => 'action new') %>

  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>id</th>
      <th>Name</th>
      <th>Username</th>
      <th>email</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      
      <td class="center"><%= user.email %></td>
      
     <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => user.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
